{
    "manifest_version": 2,
    "author": "jon@9600bps.net",
    "name": "ICW Push",
    "description": "ICW Local and Remote Push",
    "version": "1.8",
    "background": { 
      "scripts": ["background.js"]    
    },
    "browser_action": {
      "default_popup": "preferences.html",
      "default_icon": "icons/icw_logo_48.png",
      "default_title": "ICW Push"
    },
    "permissions": [
      "contextMenus", "notifications", "storage", "menus"
    ],
    "icons": {
      "16": "icons/icw_logo_16.png",
      "48": "icons/icw_logo_48.png"
    },
  "content_security_policy":  "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "icw@9600bps.net"
    }
  }
}